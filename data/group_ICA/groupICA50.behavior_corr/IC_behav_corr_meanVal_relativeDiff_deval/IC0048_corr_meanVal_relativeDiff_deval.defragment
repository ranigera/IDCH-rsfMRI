#!/bin/bash
echo "Merging stat images"
for FIRSTSEED in $(imglob -extension "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED1_"*_p_* "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED1_"*_corrp_*) ; do
  ADDCOMMAND=""
  ACTIVESEED=1
  if [ -e $FIRSTSEED ] ; then
    while [ $ACTIVESEED -le 50 ] ; do
      ADDCOMMAND=$(echo $ADDCOMMAND -add ${FIRSTSEED/_SEED1_/_SEED${ACTIVESEED}_})
      ACTIVESEED=$((ACTIVESEED + 1))
    done
    ADDCOMMAND=${ADDCOMMAND#-add}
    echo $ADDCOMMAND
    $FSLDIR/bin/fslmaths $ADDCOMMAND -mul 100 -div 4951 ${FIRSTSEED/_SEED1/}
  fi
done

echo "Merging text files"
for FIRSTSEED in "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED1_"*perm_*.txt "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED1_"*_p_*.txt "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED1_"*_corrp_*.txt ; do
  ACTIVESEED=1
  if [ -e $FIRSTSEED ] ; then
    while [ $ACTIVESEED -le 50 ] ; do
      if [ $ACTIVESEED -eq 1 ] ; then
         cat ${FIRSTSEED/_SEED1_/_SEED${ACTIVESEED}_} >> ${FIRSTSEED/_SEED1/}
      else
         tail -n +2 ${FIRSTSEED/_SEED1_/_SEED${ACTIVESEED}_} >> ${FIRSTSEED/_SEED1/}
      fi
      ACTIVESEED=$((ACTIVESEED + 1))
    done
  fi
done

echo "Renaming raw stats"
for TYPE in _ _tfce_ ; do
  for FIRSTSEED in $(imglob -extension "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED1${TYPE}tstat"* "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED1${TYPE}fstat"*) ; do
    if [ -e $FIRSTSEED ] ; then
      cp $FIRSTSEED ${FIRSTSEED/_SEED1/}
    fi
  done
done

ACTIVESEED=1
while [ $ACTIVESEED -le 50 ] ; do
  rm -rf "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED${ACTIVESEED}"*_p_*
  rm -rf "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED${ACTIVESEED}"*_corrp_*
  rm -rf $(imglob -extensions "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED${ACTIVESEED}_"?stat*)
  rm -rf "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED${ACTIVESEED}_"*perm_*.txt "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED${ACTIVESEED}_"*_p_*.txt "/export/home/ranigera/IDCH-rsfMRI/data/group_ICA/groupICA50.behavior_corr/IC_behav_corr_meanVal_relativeDiff_deval/IC0048_corr_meanVal_relativeDiff_deval_SEED${ACTIVESEED}_"*_corrp_*.txt

  ACTIVESEED=$((ACTIVESEED + 1))
done

echo "Done"
